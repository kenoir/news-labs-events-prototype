<% if not @page[:articles].empty? %>
  <section class="articles">
  <header class="section">
  <h2>Latest Articles</h2>
  </header>
  <div class="content">
    <ol>
      <% @page[:articles].each_with_index do | article,index | %>
        <% break if index == 9 %>
        <li><a href="/news/articles/<%=article.id%>"><span><%=article.title%></span></a></li>
      <% end %>
    </ol>
  </div>          
  </section>
<% end %>
