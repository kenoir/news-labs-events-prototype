<% if not @page[:agents].empty? %>
  <section class="people">
  <header class="section">
  <h2>People &amp; Organisations</h2>
  </header>
  <div class="content">
    <ul>
      <% @page[:agents].each do | person | %>
        <% next if not person.populated? %>
        <li>
        <article>
        <header class="article">
        <h3><%= person.name %></h3>
        </header>
        <div class="figure">
          <figure style="margin:0; padding: 0;">
          <img src="<%= person.thumbnail %>" alt="<%=person.name%>" />
          <figcaption><%=person.name%></a></figcaption>
        </figure>
        <a href="http://www.bbc.co.uk/news/10338256" title="Profile of <%=person.name%>" class="profile">Profile</a>
      </div>
      <ul class="info">
        <li><b>Name:</b> <span class="name"><%=person.name%></span></li>
        <li><b>Description:</b> <%= person.abstract %></li>
      </ul>       
      <% if not person.relations[:articles].nil? and
            not person.relations[:articles].objects.empty? %>
      <section class="articles">
      <header class="section">
      <h2>Latest Articles</h2>
      </header>
      <div class="content">
        <ol>
          <% person.relations[:articles].objects.each do | article | %>
            <% if article.populated %>
              <li><a href="/news/articles/<%= article.id %>">
                <%= article.title %>
              </a></li>
            <% end %>
          <% end%>
        </ol>
      </div>          
      </section>
      <% end%>
      </article>      
      </li>
    <% end %>
  </ul>
</div>
</section>
<% end %>

