<!-- K and L Agent -->
<% if not @page[:agents].empty? %>
<div id="klpeople" class="kl-generic">
  <h2 class="people-header">People</h2>
  <ul class="kl-generic-main">
    <%@page[:agents].each do | agent |%>
      <% if not agent.relations[:learn].nil? %> 
           
      <li class="medium-image">
      <h3 class="agents-header">
        <a class="story" href="http://en.wikipedia.org/wiki/<%=agent.id%>" target="_blank">
          <%=agent.name%>
          <% if not agent.relations[:learn].objects.empty? %>
            <img src="<%=agent.relations[:learn].objects.first.image%>">          
          <% end %>
        </a>
      </h3>

     <% if not agent.relations[:learn].objects.empty? %>
     <hr>
      <!-- Articles related to a agent -->
      <div class="panel ">
        <ol>
          <% agent.relations[:learn].objects.each do | about | %>
          <% break if not about.populated %>
          <li>
            <a href="<%=about.uri%>" class="story ellipsis">
            	<%=about.title%>
            	<br>
            	<span class="kl-article-description"><%=about.description%></span>
            </a>
          </li>
          <% end %>
       </ol>
      </div>
      <%end%>
      <%end%>
      <!-- Articles related to a agent -->
      </li>   
    <%end%>
    </ul>
  </div>
</div>
<%end%>
